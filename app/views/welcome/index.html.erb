<header class="p2 fixed top-0 right-0 left-0 bg-aquiz">
  <div class="left">
    <h1 class="mb0 m0 h4 caps"><a href="/" class="white text-decoration-none">Touchbase.xxx â€“ <span>Vol. 1</span></a></h1>
  </div>
</header>

<div class="px2 overflow-hidden py3 mt3">
  <% @tmessages.each do |tmessage| %>
    <div id="<%= tmessage.id %>" class="mb3 max-width-3 clearfix
    <% if tmessage.user =='Nick' %>right clear-both<% end %>
    <% if tmessage.user =='John' %>left clear-both<% end %>
    ">

      <div class="bg-<%= tmessage.user %> px2 py1">
        <p class="h1 mb0">
          <%= tmessage.text %>
        </p>
      </div>
      <span class="small caps mt1
        <% if tmessage.user =='John' %>left<% end %>
        <% if tmessage.user =='Nick' %>right<% end %>"
      >
        <a class="text-decoration-none black" href="#<%= tmessage.id %>">
          <svg class="nudge-down-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="16" height="16">
            <use xlink:href="#link"></use>
          </svg>
        </a><%= tmessage.created_at.strftime("%b %e %Y ") %>
      </span>
    </div>
  <% end %>

</div>

